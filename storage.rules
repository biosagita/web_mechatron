rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to specific folders with size limit
    match /gallery/{allPaths=**} {
      allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    match /testimonials/{allPaths=**} {
      allow write: if request.resource.size < 5 * 1024 * 1024; // 5MB
    }
    
    match /news/{allPaths=**} {
      allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    match /partners/{allPaths=**} {
      allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    match /pages/{allPaths=**} {
      allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    match /uploads/{allPaths=**} {
      allow write: if request.resource.size < 50 * 1024 * 1024; // 50MB
    }
  }
}
