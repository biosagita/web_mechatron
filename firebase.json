{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/courses/placeholder{,/**}",
        "destination": "/courses/placeholder/index.html"
      },
      {
        "source": "/courses/*",
        "destination": "/courses/placeholder/index.html"
      },
      {
        "source": "/news/placeholder{,/**}",
        "destination": "/news/placeholder/index.html"
      },
      {
        "source": "/news/*",
        "destination": "/news/placeholder/index.html"
      },
      {
        "source": "/pages/placeholder{,/**}",
        "destination": "/pages/placeholder/index.html"
      },
      {
        "source": "/pages/*",
        "destination": "/pages/placeholder/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "port": 8081
    },
    "hosting": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
